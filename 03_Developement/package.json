  "workspaces": [
    "server",
    "fe"
  ],
  "dependencies": {
    "axios": "^1.10.0",
    "colors": "^1.4.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "private": false,
  "config": {
    "development": {
      "backend_port": 8000,
      "frontend_port": 5173,
      "database": "sqlite"
    },
    "production": {
      "backend_port": 8000,
      "frontend_port": 80,
      "database": "postgresql"
    }
  }
